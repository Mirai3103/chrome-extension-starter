{
  "manifest_version": 3,
  "name": "Chrome Extension Template",
  "version": "1.0.0",
  "description": "Chrome Extension Template with esbuild and TypeScript",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
